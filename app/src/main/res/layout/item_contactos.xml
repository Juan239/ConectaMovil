<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!--<ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:id="@+id/foto_perfil_lista"
                android:src="@drawable/foto_perfil"
                android:contentDescription="Foto de perfil" /> -->

            <!-- Aquí puedes agregar TextView u otros widgets para mostrar la información del contacto -->
            <TextView
                android:id="@+id/txtNombreContacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Contacto"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/iniciarChat"
                android:src="@drawable/icono_mensaje"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/eliminarContacto"
                android:src="@drawable/icono_eliminar"/>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>